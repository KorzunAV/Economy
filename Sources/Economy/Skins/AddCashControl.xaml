<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Glass.xaml" />
    </ResourceDictionary.MergedDictionaries>



    <!--AddCashControl-->
    <Style x:Key="AddCashGroupBox"  TargetType="GroupBox">
        <Setter Property="Background" Value="#FF807C7C"/>
        <Setter Property="Header" Value="Новый перевод"/>
    </Style>

    <Style  x:Key="AddCashTextBlock" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style  x:Key="AddCashComboBox" BasedOn="{StaticResource ComboBoxBase}" TargetType="ComboBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="MinWidth" Value="120"/>
    </Style>
    
    <Style  x:Key="AddCashButtonClose" BasedOn="{StaticResource Button}" TargetType="Button">
        <Setter Property="ToolTip" Value="Закрыть"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Content" Value="X"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Width" Value="23"/>
    </Style>

</ResourceDictionary>