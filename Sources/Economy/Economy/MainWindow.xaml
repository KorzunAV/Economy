<Window x:Class="Economy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cntrl="clr-namespace:Economy.Controls"
        Title="MainWindow">    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Skins/Glass.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="97*"/>
        </Grid.ColumnDefinitions>
        <cntrl:AccountListControl x:Name="Acconts" />
        <cntrl:TransactionListControl x:Name="TransactionList" Grid.Column="1" Grid.Row="0" />
        <cntrl:MessageControl x:Name="MessageGroupBox" Grid.Column="1" Grid.Row="0" Visibility="Hidden"/>
    </Grid>
</Window>
