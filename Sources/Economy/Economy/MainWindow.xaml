<Window x:Class="Economy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cntrl="clr-namespace:Economy.Controls"
        Title="MainWindow">    

    
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="97*"/>
        </Grid.ColumnDefinitions>
        <cntrl:AccountListControl Grid.Column="0"/>
        <cntrl:TransactionListControl Grid.Column="1" Grid.Row="0" />
        <cntrl:MessageControl Grid.Column="1" Grid.Row="0"/>
    </Grid>
</Window>
