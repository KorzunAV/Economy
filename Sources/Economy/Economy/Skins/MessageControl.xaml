<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Glass.xaml" />
    </ResourceDictionary.MergedDictionaries>



    <!--MessageControl-->
    <Style x:Key="MessageGroupBox"  TargetType="GroupBox">
        <Setter Property="Background" Value="#FF807C7C"/>
        <Setter Property="Header" Value="Информация"/>
    </Style>

    <Style  x:Key="MessageTextBlock" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style  x:Key="MessageButtonClose" BasedOn="{StaticResource Button}" TargetType="Button">
        <Setter Property="ToolTip" Value="Закрыть"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Content" Value="X"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Width" Value="23"/>
    </Style>

</ResourceDictionary>